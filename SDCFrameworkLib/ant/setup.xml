<project default="local-setup" basedir="..">
	<available file="local.properties" property="local.properties.available"/>

	<!--  The default target -->
	<target name="local-setup" unless="local.properties.available">
	    <property environment="env"/>
		<exec dir="${basedir}" executable="cmd.exe" osfamily="Windows">
		  <arg line="/c android update lib-project --path ."/>
		</exec>
		<exec dir="${basedir}" executable="android" osfamily="Unix" >		  
		  <arg line="update lib-project --path ."/>
		</exec>
	</target>
</project>